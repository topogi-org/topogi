(define init ()
  0)

(define event-listener ()
  '(((key-press "q") (\ _ 'quit))
    ((key-press "k") increment)
    ((key-press "j") decrement)))

(define increment (state)
  (+ state 1))

(define decrement (state)
  (- state 1))

(define view (state)
  (list 'layer (list 'block "counter" state
    (list 'style (list 'border 'all)))))
